{
  "name": "ci-detector",
  "version": "0.0.4",
  "keywords": [
    "detector",
    "ci",
    "server",
    "env",
    "abstraction"
  ],
  "description": "Detect the CI server environment",
  "main": "lib/detector.js",
  "scripts": {
    "test": "multi='spec=- mocha-tcov-reporter=- mocha-lcov-reporter=lcov-report.lcov' ./node_modules/.bin/mocha --recursive test",
    "build": "./node_modules/.bin/gulp build",
    "watch": "./node_modules/.bin/gulp watch",
    "codeclimate": "./node_modules/.bin/codeclimate < lcov-report.lcov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/holyshared/ci-detector"
  },
  "author": "Noritaka Horio <holy.shared.design@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/holyshared/ci-detector/issues"
  },
  "homepage": "https://github.com/holyshared/ci-detector",
  "devDependencies": {
    "blanket": "~1.1",
    "chai": "~3.0",
    "codeclimate-test-reporter": "~0.1",
    "coffee-script": "~1.9",
    "gulp": "~3.9",
    "gulp-coffee": "~2.3",
    "gulp-sourcemaps": "~1.5.0",
    "gulp-util": "~3.0",
    "mocha": "~2.2",
    "mocha-lcov-reporter": "~0.0.2",
    "mocha-multi": "~0.7.0",
    "mocha-tcov-reporter": "~0.0.7",
    "sinon": "~1.15"
  },
  "config": {
    "blanket": {
      "pattern": "/lib/",
      "data-cover-never": "/node_modules/"
    }
  }
}
