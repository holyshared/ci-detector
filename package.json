{
  "name": "ci-detector",
  "version": "0.0.4",
  "keywords": [
    "detector",
    "ci",
    "server",
    "env",
    "abstraction"
  ],
  "description": "Detect the CI server environment",
  "main": "lib/detector.js",
  "scripts": {
    "test": "multi='spec=- mocha-tcov-reporter=- mocha-lcov-reporter=coverage/report.lcov' ./node_modules/.bin/mocha --recursive test",
    "build": "./node_modules/.bin/gulp build",
    "watch": "./node_modules/.bin/gulp watch",
    "codeclimate": "./node_modules/.bin/codeclimate < coverage/report.lcov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/holyshared/ci-detector"
  },
  "author": "Noritaka Horio <holy.shared.design@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/holyshared/ci-detector/issues"
  },
  "homepage": "https://github.com/holyshared/ci-detector",
  "devDependencies": {
    "blanket": "^1.1.6",
    "chai": "^1.10.0",
    "codeclimate-test-reporter": "0.0.4",
    "coffee-script": "^1.8.0",
    "gulp": "^3.8.10",
    "gulp-coffee": "^2.2.0",
    "gulp-sourcemaps": "^1.3.0",
    "gulp-util": "^3.0.2",
    "mocha": "^2.1.0",
    "mocha-lcov-reporter": "0.0.1",
    "mocha-multi": "^0.6.0",
    "mocha-tcov-reporter": "0.0.3",
    "sinon": "^1.12.2"
  },
  "config": {
    "blanket": {
      "pattern": "/lib/",
      "data-cover-never": "/node_modules/"
    }
  }
}
